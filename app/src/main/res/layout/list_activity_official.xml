<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_tag1"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="1"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/black_text1"/>

        <TextView
            android:layout_toRightOf="@+id/tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="/"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/gray_text1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="2"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/gray_text1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tag2"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="1"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/gray_text1"/>

        <TextView
            android:layout_toRightOf="@+id/tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="/"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/gray_text1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="2"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/black_text1"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_activity_official_img"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginTop="@dimen/margin_30"
        android:scaleType="fitXY"
        android:src="@mipmap/img_l"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_35"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_alignRight="@+id/iv_activity_official_img">

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_2"
            android:text="众筹中"
            android:textSize="@dimen/text_size_9"
            android:textColor="@color/white"
            android:background="@drawable/re_corners_blue"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/iv_activity_official_img"
        android:background="@drawable/re_corners_gradient_black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_activity_official_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLength="15"
            android:text="三生三世十里桃花电影见面会"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与 "
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"/>

            <TextView
                android:id="@+id/tv_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1236"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11"/>

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6666"
                android:textColor="@color/gray_text2"
                android:textSize="@dimen/text_size_11"/>
        </LinearLayout>

    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/iv_activity_official"
        android:background="@drawable/re_corners_gradient_black"/>-->

</RelativeLayout>