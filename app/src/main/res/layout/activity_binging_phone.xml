<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background2"
    android:orientation="vertical"
    tools:context="com.qingye.wtsyou.activity.my.CreateAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include
            layout="@layout/head"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_2"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_40"
            android:src="@mipmap/phone"/>

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:padding="@dimen/margin_10"
            android:maxLines="1"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:textSize="@dimen/text_size_13"
            android:textColorHint="@color/gray_text2"
            android:textColor="@color/black_text1"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@color/gray_background2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8">

            <EditText
                android:id="@+id/edt_identifying"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:padding="@dimen/margin_10"
                android:maxLength="10"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:textSize="@dimen/text_size_13"
                android:textColorHint="@color/gray_text2"
                android:textColor="@color/black_text1"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@color/gray_background2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="@dimen/margin_10"
                android:gravity="center_horizontal"
                android:text="获取验证码"
                android:textColor="@color/orange_text2"
                android:textSize="@dimen/text_size_13"
                android:background="@color/gray_background2"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:gravity="center"
            android:text="请填写您本人的手机账号，我们会将消息发指您手机"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/gray_text2"/>

    </LinearLayout>

</LinearLayout>
