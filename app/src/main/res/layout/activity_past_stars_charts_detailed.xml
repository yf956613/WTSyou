<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.qingye.wtsyou.activity.home.PastStarsChartsDetailedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25">
        <include layout="@layout/head"></include>
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_4"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:id="@+id/ll_img1"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/circle_white_orange_shadow">

                            <com.qingye.wtsyou.widget.CircleImageView
                                android:id="@+id/iv_second_img"
                                android:layout_width="63dp"
                                android:layout_height="63dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/head_d"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/second"
                            android:layout_alignRight="@+id/ll_img1"
                            android:layout_alignBottom="@+id/ll_img1"
                            android:layout_marginRight="@dimen/margin_5"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_second_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="林宥嘉"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black_text1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_2"
                            android:layout_gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人气值   "
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/gray_text1"/>
                            <TextView
                                android:id="@+id/tv_second_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="3799"
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/gray_text1"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_second_focus"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_8"
                            android:background="@drawable/corners_orange_1"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/margin_4"
                            android:paddingBottom="@dimen/margin_4"
                            android:text="关 注"
                            android:textSize="@dimen/margin_10"
                            android:textColor="@color/orange_text1"/>

                        <TextView
                            android:id="@+id/tv_second_rank"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_8"
                            android:background="@drawable/corners_orange_1"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/margin_4"
                            android:paddingBottom="@dimen/margin_4"
                            android:text="打 榜"
                            android:textSize="@dimen/margin_10"
                            android:textColor="@color/orange_text1"
                            android:visibility="gone"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iv_crown"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@mipmap/crown"
                            android:layout_alignParentRight="true"/>

                        <LinearLayout
                            android:id="@+id/ll_img2"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle_white_orange_shadow">

                            <com.qingye.wtsyou.widget.CircleImageView
                                android:id="@+id/iv_first_img"
                                android:layout_width="73dp"
                                android:layout_height="73dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/head_a"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="鹿晗"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black_text1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_2"
                            android:layout_gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人气值   "
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/gray_text1"/>
                            <TextView
                                android:id="@+id/tv_first_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="3799"
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/gray_text1"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_first_focus"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_8"
                            android:background="@drawable/corners_orange_1"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/margin_4"
                            android:paddingBottom="@dimen/margin_4"
                            android:text="关 注"
                            android:textSize="@dimen/margin_10"
                            android:textColor="@color/orange_text1"/>

                        <TextView
                            android:id="@+id/tv_first_rank"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_8"
                            android:background="@drawable/corners_orange_1"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/margin_4"
                            android:paddingBottom="@dimen/margin_4"
                            android:text="打 榜"
                            android:textSize="@dimen/margin_10"
                            android:textColor="@color/orange_text1"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:id="@+id/ll_img3"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/circle_white_orange_shadow">

                            <com.qingye.wtsyou.widget.CircleImageView
                                android:id="@+id/iv_third_img"
                                android:layout_width="63dp"
                                android:layout_height="63dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/head_d"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/third"
                            android:layout_alignRight="@+id/ll_img3"
                            android:layout_alignBottom="@+id/ll_img3"
                            android:layout_marginRight="@dimen/margin_5" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_third_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="林宥嘉"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black_text1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_2"
                            android:layout_gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人气值   "
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/gray_text1"/>
                            <TextView
                                android:id="@+id/tv_third_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="3799"
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/gray_text1"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_third_focus"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_8"
                            android:background="@drawable/corners_orange_1"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/margin_4"
                            android:paddingBottom="@dimen/margin_4"
                            android:text="关 注"
                            android:textSize="@dimen/margin_10"
                            android:textColor="@color/orange_text1"/>

                        <TextView
                            android:id="@+id/tv_third_operator"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_8"
                            android:background="@drawable/corners_orange_1"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/margin_4"
                            android:paddingBottom="@dimen/margin_4"
                            android:text="打 榜"
                            android:textSize="@dimen/margin_10"
                            android:textColor="@color/orange_text1"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_3"
                android:layout_marginLeft="@dimen/margin_6"
                android:layout_marginRight="@dimen/margin_6">
                <include layout="@layout/base_http_recycler_fragment"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
