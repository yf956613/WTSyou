<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_7"
        android:layout_marginBottom="@dimen/margin_7"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_No"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/gray_text4"
                android:textSize="@dimen/text_size_13"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_70"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_charts"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/head_d"/>

            <LinearLayout
                android:layout_toRightOf="@+id/iv_charts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_charts_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="林宥嘉"
                    android:textColor="@color/black_text1"
                    android:textSize="@dimen/text_size_13"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人气值   "
                        android:textColor="@color/gray_text1"
                        android:textSize="@dimen/text_size_11"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="3088"
                        android:textColor="@color/gray_text1"
                        android:textSize="@dimen/text_size_11"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_operate"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:text="打 榜"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/orange_line"
                android:background="@drawable/corners_orange_1"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/divider_horizontal_1px"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"/>

</LinearLayout>