<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_6"
    android:background="@drawable/corners_white"
    android:orientation="vertical"
    tools:context="com.qingye.wtsyou.fragment.home.HomeFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:src="@mipmap/rectanglef" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.5dp"
            android:layout_marginLeft="11.5dp"
            android:rotation="-45"
            android:text="更多"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_9"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_focus"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/focus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:text="我关注的明星"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/orange_text"/>
        </LinearLayout>

        <View
            android:background="@drawable/orange_horizontal_line"
            android:layout_marginTop="-52dp"
            android:layout_marginBottom="-52dp"
            android:layout_marginLeft="@dimen/margin_70"
            android:layout_marginRight="@dimen/margin_70"
            android:layerType="software"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_all"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/all"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:text="全部明星"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/orange_text"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
