<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8"
    android:paddingLeft="@dimen/margin_10"
    android:paddingRight="@dimen/margin_10"
    android:paddingTop="@dimen/margin_3"
    android:paddingBottom="@dimen/margin_3"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/margin_12"
            android:layout_height="@dimen/margin_12"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/timestage"/>

        <View
            android:layout_width="@dimen/margin_2"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/gray_background"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/llLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_70"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_2"
                    android:paddingBottom="@dimen/margin_2"
                    android:text="演唱会"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/white"
                    android:background="@drawable/re_corners_blue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@+id/ll_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江"
                    android:textColor="@color/gray_text1"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · "
                    android:textColor="@color/gray_text1"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="5"
                    android:text="杭州"
                    android:textColor="@color/gray_text1"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="2017/07/17"
                android:textColor="@color/gray_text1"
                android:textSize="@dimen/text_size_12"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:ellipsize="end"
            android:maxLength="18"
            android:text="2017鹿晗世界巡回演唱会——杭州站"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/black_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/btn_operate"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_4"
            android:paddingBottom="@dimen/margin_4"
            android:text="购票"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/blue_line"
            android:background="@drawable/corners_blue"/>
    </LinearLayout>

</RelativeLayout>