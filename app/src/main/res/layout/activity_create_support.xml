                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_15"
                        android:background="@drawable/corners_gray_stroke_solid">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一、申请投票需要什么条件"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/black_text1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.等级达到6级以上"
                            android:layout_marginTop="@dimen/margin_6"
                            android:textSize="@dimen/text_size_11"
                            android:textColor="@color/gray_text1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.填写对应投票资料"
                            android:layout_marginTop="@dimen/margin_4"
                            android:textSize="@dimen/text_size_11"
                            android:textColor="@color/gray_text1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="二、申请投票需要审核多久"
                            android:layout_marginTop="@dimen/margin_6"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/black_text1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="在三个工作日内给予答复"
                            android:layout_marginTop="@dimen/margin_6"
                            android:textSize="@dimen/text_size_11"
                            android:textColor="@color/gray_text1"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_2"
                        android:layout_marginBottom="@dimen/margin_2"
                        android:gravity="center"
                        android:text="应援须知"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/white"
                        android:background="@drawable/re_corners_pink"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_target_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_20">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="目标金额"
                                android:textSize="@dimen/text_size_13"
                                android:textColor="@color/black_text1"/>

                            <EditText
                                android:id="@+id/edt_target_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_38"
                                android:numeric="integer"
                                android:maxLength="10"
                                android:hint="目标金额"
                                android:textSize="@dimen/text_size_13"
                                android:textColorHint="@color/gray_text2"
                                android:textColor="@color/black_text1"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:background="@null"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        style="@style/divider_horizontal_1px"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginLeft="@dimen/margin_10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/ll_associate_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_35">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="center_vertical"
                                android:paddingTop="@dimen/margin_16"
                                android:paddingBottom="@dimen/margin_16"
                                android:text="关联明星"
                                android:textSize="@dimen/text_size_13"
                                android:textColor="@color/black_text1"/>

                            <FrameLayout
                                android:id="@+id/list_associate_stars"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_28"
                                android:layout_marginRight="@dimen/margin_6"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/margin_15"
                            android:layout_height="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/back_b"/>
                    </RelativeLayout>

                    <View
                        style="@style/divider_horizontal_1px"
                        android:layout_marginLeft="@dimen/margin_10"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/ll_associate_conversation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_14"
                        android:layout_marginLeft="@dimen/margin_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_35"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="center_vertical"
                                android:paddingTop="@dimen/margin_16"
                                android:paddingBottom="@dimen/margin_16"
                                android:text="关联聊天室"
                                android:textSize="@dimen/text_size_13"
                                android:textColor="@color/black_text1"/>

                            <FrameLayout
                                android:id="@+id/list_associate_conversation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_28"
                                android:layout_marginRight="@dimen/margin_6"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/margin_15"
                            android:layout_height="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/back_b"/>

                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_6"
                    android:layout_marginRight="@dimen/margin_6"
                    android:background="@drawable/corners_orange_shade_button"
                    android:textAllCaps="false"
                    android:text="发起应援"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
