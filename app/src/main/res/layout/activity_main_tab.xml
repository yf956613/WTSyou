<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.qingye.wtsyou.activity.MainTabActivity">

    <FrameLayout
        android:id="@+id/flMainTabFragmentContainer"
        style="@style/match_match"
        android:layout_weight="1" >
    </FrameLayout>

    <View
        style="@style/divider_horizontal_1px"/>

    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        android:layout_height="@dimen/bottombar_height"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/llBottomTabTab0"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivBottomTabTab0"
                android:layout_width="@dimen/margin_22"
                android:layout_height="@dimen/margin_22"
                style="@style/bottom_tab_iv"
                android:src="@drawable/home_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab0"
                style="@style/bottom_tab_tv"
                android:textSize="@dimen/text_size_10"
                android:text="首页" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab1"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            style="@style/bottom_tab_ll"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivBottomTabTab1"
                android:layout_width="@dimen/margin_22"
                android:layout_height="@dimen/margin_22"
                style="@style/bottom_tab_iv"
                android:src="@drawable/activity_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab1"
                style="@style/bottom_tab_tv"
                android:textSize="@dimen/text_size_10"
                android:text="活动" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab2"
            style="@style/bottom_tab_ll"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivBottomTabTab2"
                android:layout_width="@dimen/margin_22"
                android:layout_height="@dimen/margin_22"
                style="@style/bottom_tab_iv"
                android:src="@drawable/conversation_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab2"
                style="@style/bottom_tab_tv"
                android:textSize="@dimen/text_size_10"
                android:text="聊天" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomTabTab3"
            style="@style/bottom_tab_ll"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ivBottomTabTab3"
                android:layout_width="@dimen/margin_22"
                android:layout_height="@dimen/margin_22"
                style="@style/bottom_tab_iv"
                android:src="@drawable/personal_selector" />

            <TextView
                android:id="@+id/tvBottomTabTab3"
                style="@style/bottom_tab_tv"
                android:textSize="@dimen/text_size_10"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
