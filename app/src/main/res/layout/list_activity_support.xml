<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_6"
        android:layout_marginRight="@dimen/margin_6"
        android:layout_marginTop="@dimen/margin_10">

        <ImageView
            android:id="@+id/iv_new_support_img"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_v"/>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_7"
            android:layout_alignRight="@+id/iv_new_support_img"
            android:gravity="center"
            android:paddingTop="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_2"
            android:text="应援中"
            android:textSize="@dimen/text_size_9"
            android:textColor="@color/white"
            android:background="@drawable/re_corners_pink"/>

        <ProgressBar
            android:id="@+id/join_progressbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/margin_2"
            android:layout_marginRight="@dimen/margin_2"
            android:layout_alignBottom="@+id/iv_new_support_img"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_horizontal1"/>

        <TextView
            android:layout_below="@+id/iv_new_support_img"
            android:id="@+id/tv_hot_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginLeft="@dimen/margin_2"
            android:layout_marginRight="@dimen/margin_2"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="[房间里的音乐会]陈绮贞音乐会应援"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/black_text1"/>

        <LinearLayout
            android:layout_below="@+id/tv_hot_show_name"
            android:id="@+id/lldown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-7-10 12:00"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_size_11"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   截止"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_size_10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与 "
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_size_10"/>

                <TextView
                    android:id="@+id/tv_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1236"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_size_11"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_size_11"/>

                <TextView
                    android:id="@+id/all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6666"
                    android:textColor="@color/gray_text2"
                    android:textSize="@dimen/text_size_11"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_below="@+id/lldown"
            android:layout_marginTop="@dimen/margin_12"
            style="@style/divider_horizontal_1px"/>

    </RelativeLayout>

</RelativeLayout>