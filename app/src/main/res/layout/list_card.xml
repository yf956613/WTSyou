<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginLeft="@dimen/margin_6"
    android:layout_marginRight="@dimen/margin_6">

    <RelativeLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_isused_img"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:src="@mipmap/combinedshape"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥ "
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textSize="@dimen/text_size_25"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满  "
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_content_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  可用"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/re_corners_white_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_10"
            android:text="周杰伦摩天轮演唱会-厦门站众筹抵用券"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black_text1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效时间:  "
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/gray_text8"/>

                <TextView
                    android:id="@+id/tv_card_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018.05.01"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/gray_text8"/>

            </LinearLayout>

            <View
                android:background="@drawable/horizontal_line"
                android:layout_marginTop="-45dp"
                android:layout_marginBottom="-45dp"
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <RelativeLayout
                android:id="@+id/rl_detailed_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细信息"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/gray_text1"/>

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="13dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_l"/>

                <ImageView
                    android:id="@+id/iv_less"
                    android:layout_width="13dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/next_k"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_detailed"
        android:layout_below="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/re_corners_white_2"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_detailed_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:text="限周杰伦厦门演唱会众筹抵用"
            android:textSize="@dimen/text_size_11"/>

        <TextView
            android:id="@+id/tv_detailed_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_6"
            android:text="限在想见你APP中使用"
            android:textSize="@dimen/text_size_11"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_is_used"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:src="@mipmap/used"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_newest_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/rectangle_3"/>

</RelativeLayout>