<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background2"
    android:orientation="vertical"
    tools:context="com.qingye.wtsyou.activity.search.SearchAreaActivity">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25">
        <include
            layout="@layout/head"/>
    </LinearLayout>

    <zuo.biao.library.ui.xlistview.XListView
        android:layout_below="@+id/ll_head"
        android:id="@id/lvBaseList"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/white">

        <com.qingye.wtsyou.widget.QuickIndexBar
            android:id="@+id/quickIndexBar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_70"
            android:layout_marginBottom="@dimen/margin_70"
            android:background="@color/white"/>
    </LinearLayout>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_letter"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/corners_clarity_black"
        android:textStyle="bold"
        android:layout_width="110dp"
        android:layout_height="110dp"/>
</RelativeLayout>
