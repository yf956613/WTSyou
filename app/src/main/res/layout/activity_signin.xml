<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background2"
    tools:context="com.qingye.wtsyou.activity.my.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include
            layout="@layout/head"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_10"
        android:background="@mipmap/bgm_qiandao">

        <LinearLayout
            android:id="@+id/ll_day"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_white_orange_shadow"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_continuity_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_size_40"
                    android:textColor="@color/orange_text2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 天"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/orange_text2"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_below="@+id/ll_day"
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_centerHorizontal="true"
            android:text="已连续签到"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black_text1"/>

        <RelativeLayout
            android:layout_below="@+id/text_view1"
            android:id="@+id/text_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginRight="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/love_r"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="获取爱心"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>

                <TextView
                    android:id="@+id/tv_signin_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_6"
                    android:text="100"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/orange_text2"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_signIn"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:text="签 到"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/orange_text2"
                android:background="@drawable/corners_orange_1"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/text_view2"
            android:id="@+id/ll_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginRight="@dimen/margin_25"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_monday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/gray_text9"
                android:background="@drawable/circle_gray_1"/>

            <View
                android:id="@+id/tue_line"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.5"
                android:background="@color/gray_line"/>

            <TextView
                android:id="@+id/tv_tuesday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/gray_text9"
                android:background="@drawable/circle_gray_1"/>

            <View
                android:id="@+id/wed_line"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.5"
                android:background="@color/gray_line"/>

            <TextView
                android:id="@+id/tv_wednesday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/gray_text9"
                android:background="@drawable/circle_gray_1"/>

            <View
                android:id="@+id/thu_line"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.5"
                android:background="@color/gray_line"/>

            <TextView
                android:id="@+id/tv_thursday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/gray_text9"
                android:background="@drawable/circle_gray_1"/>

            <View
                android:id="@+id/fri_line"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.5"
                android:background="@color/gray_line"/>

            <TextView
                android:id="@+id/tv_friday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/gray_text9"
                android:background="@drawable/circle_gray_1"/>

            <View
                android:id="@+id/sat_line"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.5"
                android:background="@color/gray_line"/>

            <TextView
                android:id="@+id/tv_saturday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/gray_text9"
                android:background="@drawable/circle_gray_1"/>

            <View
                android:id="@+id/sun_line"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.5"
                android:background="@color/gray_line"/>

            <TextView
                android:id="@+id/tv_sunday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/gray_text9"
                android:background="@drawable/circle_gray_1"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/ll_week"
            android:id="@+id/text_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginRight="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本周已签到"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/orange_text2"/>

                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="0"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/orange_text2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="天"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/orange_text2"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:text="7 天"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/black_text1"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/text_view3"
            android:id="@+id/text_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_70"
            android:layout_marginRight="@dimen/margin_70"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:background="@color/gray_line1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到规则"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black_text1"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:background="@color/gray_line1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/text_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:text="1  每签到一次获得爱心，爱心可以用来打榜"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black_text2"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
