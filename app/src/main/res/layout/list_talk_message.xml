<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="horizontal">

        <com.qingye.wtsyou.widget.CircleImageView
            android:id="@+id/iv_fans"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/head_d"/>

        <LinearLayout
            android:layout_toRightOf="@+id/iv_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_fans_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="林宥嘉"
                    android:textColor="@color/black_text1"
                    android:textSize="@dimen/text_size_13"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2018-04-31 15：20"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="鹿晗2017年的演唱会门票可以低价出售吗？"
                    android:textColor="@color/gray_text1"
                    android:textSize="@dimen/text_size_11"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/divider_horizontal_1px"
        android:layout_marginLeft="@dimen/margin_10"/>

</LinearLayout>