<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qingye.wtsyou.fragment.campaign.ActivityHotShowFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    layout="@layout/base_http_recycler_fragment"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_stars_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="· 查看全部 ·"
                    android:textColor="@color/gray_text1"
                    android:textSize="@dimen/text_size_10"/>

                <TextView
                    android:id="@+id/tv_stars_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="· 收起全部 ·"
                    android:textColor="@color/gray_text1"
                    android:textSize="@dimen/text_size_10"
                    android:visibility="gone"/>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
