<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/margin_4">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginLeft="@dimen/margin_6"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.11.13 - 2017.11.19"
                android:textColor="@color/orange_text2"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期"
                android:textColor="@color/orange_text2"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_crown"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:src="@mipmap/crown"
                        android:layout_alignParentRight="true"/>

                    <LinearLayout
                        android:id="@+id/ll_img1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_white_orange_shadow">

                        <com.qingye.wtsyou.widget.CircleImageView
                            android:id="@+id/iv_first_img"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/head_a"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="鹿晗"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_text1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人气值   "
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/gray_text1"/>
                        <TextView
                            android:id="@+id/tv_first_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="3799"
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/gray_text1"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/margin_15"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/ll_img2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_white_orange_shadow">

                        <com.qingye.wtsyou.widget.CircleImageView
                            android:id="@+id/iv_second_img"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/head_d"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/second"
                        android:layout_alignRight="@+id/ll_img2"
                        android:layout_alignBottom="@+id/ll_img2"
                        android:layout_marginRight="@dimen/margin_5"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_second_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="林宥嘉"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_text1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人气值   "
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/gray_text1"/>
                        <TextView
                            android:id="@+id/tv_second_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="3799"
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/gray_text1"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/ll_img3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle_white_orange_shadow">

                        <com.qingye.wtsyou.widget.CircleImageView
                            android:id="@+id/iv_third_img"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/head_d"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/third"
                        android:layout_alignRight="@+id/ll_img3"
                        android:layout_alignBottom="@+id/ll_img3"
                        android:layout_marginRight="@dimen/margin_5" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_third_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="林宥嘉"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_text1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人气值   "
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/gray_text1"/>
                        <TextView
                            android:id="@+id/tv_third_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="3799"
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/gray_text1"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/drop_down"/>
    </LinearLayout>
</LinearLayout>