<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background2"
    android:orientation="vertical"
    tools:context="com.qingye.wtsyou.activity.my.CreateAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include
            layout="@layout/head"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="收货人"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>

                <EditText
                    android:id="@+id/edt_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_38"
                    android:maxLength="6"
                    android:hint="名称,6字以内"
                    android:textSize="@dimen/text_size_13"
                    android:textColorHint="@color/gray_text2"
                    android:textColor="@color/black_text1"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@null"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            style="@style/divider_horizontal_1px"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_10"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="联系电话"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>

                <EditText
                    android:id="@+id/edt_contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_28"
                    android:maxLines="1"
                    android:hint="联系电话"
                    android:inputType="phone"
                    android:textSize="@dimen/text_size_13"
                    android:textColorHint="@color/gray_text2"
                    android:textColor="@color/black_text1"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@null"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            style="@style/divider_horizontal_1px"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_10"/>

        <RelativeLayout
            android:id="@+id/ll_associate_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="所在地区"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_28"
                    android:text="福建省 厦门市"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_15"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_b"/>
        </RelativeLayout>

        <View
            style="@style/divider_horizontal_1px"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_10"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="详细地址"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>

                <EditText
                    android:id="@+id/edt_street"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/margin_28"
                    android:gravity="top"
                    android:hint="详细地址"
                    android:textSize="@dimen/text_size_13"
                    android:textColorHint="@color/gray_text2"
                    android:textColor="@color/black_text1"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@null"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
