<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:scaleType="fitXY"
        android:src="@mipmap/quan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ticket_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ticket_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="G-DRACON [KWON JI YONG]"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black_text1"/>

            <View
                android:background="@drawable/horizontal_line"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="-40dp"
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/dizhi"/>

                <TextView
                    android:id="@+id/tv_ticket_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="厦门嘉庚体育馆"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/rili_g"/>

                <TextView
                    android:id="@+id/tv_ticket_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="2018-4-28 20：00"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/black_text1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_is_used"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:src="@mipmap/used_k"
        android:visibility="gone"/>

</RelativeLayout>